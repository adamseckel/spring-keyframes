{
  "paths": {
    "@spring-keyframes/driver": ["./packages/driver"],
    "@spring-keyframes/matrix": ["./packages/matrix"],
    "@spring-keyframes/react": ["./packages/react"]
  },
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_app.js"],
  "exclude": ["node_modules"]
}
